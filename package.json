{
  "name": "portfolio",
  "version": "0.0.1",
  "description": "My portfolio",
  "main": "index.js",
  "engines": {
    "node": ">=22 <23"
  },
  "scripts": {
    "dev:service": "pnpm --filter @portfolio/service dev",
    "dev:ui": "pnpm --filter @portfolio/ui dev",
    "dev": "concurrently \"pnpm run dev:service\" \"pnpm run dev:ui\"",
    "build:service": "pnpm --filter @portfolio/service build",
    "build:ui": "pnpm --filter @portfolio/ui build",
    "build": "concurrently \"pnpm run build:service\" \"pnpm run build:ui\"",
    "preview:service": "pnpm --filter @portfolio/service preview",
    "preview:ui": "pnpm --filter @portfolio/ui preview",
    "preview": "concurrently \"pnpm run preview:service\" \"pnpm run preview:ui\"",
    "lint": "$npm_execpath run lint:check",
    "lint:check": "pnpm --filter @portfolio/service --filter @portfolio/ui lint:check",
    "lint:fix": "pnpm --filter @portfolio/service --filter @portfolio/ui lint:fix",
    "format:check": "pnpm --filter @portfolio/service --filter @portfolio/ui format:check",
    "format:fix": "pnpm --filter @portfolio/service --filter @portfolio/ui format:fix",
    "biome": "$npm_execpath run biome:check",
    "biome:check": "pnpm --filter @portfolio/service --filter @portfolio/ui --filter @portfolio/common-ui biome:check",
    "biome:fix": "pnpm --filter @portfolio/service --filter @portfolio/ui --filter @portfolio/common-ui biome:fix",
    "prepare": "husky",
    "deps:outdated": "pnpm -r outdated",
    "deps:audit": "pnpm audit --prod",
    "deps:update:check": "pnpm -r up --interactive",
    "deps:update:latest": "pnpm -r up -L major",
    "ci:verify": "pnpm -r lint && pnpm -r test && pnpm -r build"
  },
  "keywords": [],
  "author": "i@xuli.dev",
  "license": "ISC",
  "packageManager": "pnpm@10.18.0",
  "devDependencies": {
    "concurrently": "^9.2.0",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11"
  },
  "lint-staged": {
    "apps/service/**/*.{js,jsx,ts,tsx}": [
      "pnpm --filter @portfolio/service lint:fix"
    ],
    "apps/ui/**/*.{js,jsx,ts,tsx}": [
      "pnpm --filter @portfolio/ui lint:fix"
    ]
  }
}
