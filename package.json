{
  "name": "portfolio",
  "version": "0.0.1",
  "type": "module",
  "description": "My portfolio",
  "main": "index.js",
  "engines": {
    "node": ">=22 <23"
  },
  "scripts": {
    "dev": "turbo run dev --parallel --filter=@portfolio/shared --filter=@portfolio/service --filter=@portfolio/ui",
    "dev:service": "turbo run dev --parallel --filter=@portfolio/shared --filter=@portfolio/service",
    "dev:ui": "turbo run dev --parallel --filter=@portfolio/shared --filter=@portfolio/ui",
    "build:shared": "turbo run build --filter=@portfolio/shared",
    "build:service": "turbo run build --filter=@portfolio/service",
    "build:r2": "turbo run build --filter=@portfolio/r2-sync",
    "build": "turbo run build",
    "test:service": "turbo run test --filter=@portfolio/service",
    "test:r2": "turbo run test --filter=@portfolio/r2-sync",
    "test": "turbo run test",
    "type:check:ci": "turbo run type:check:ci",
    "cf-typegen": "node ./scripts/run-cf-typegen.mjs",
    "sync:r2": "turbo run sync --filter=@portfolio/r2-sync",
    "lint": "turbo run lint",
    "lint:check": "turbo run lint:check",
    "lint:fix": "turbo run lint:fix",
    "format:biome": "biome format .",
    "lint:biome": "biome lint .",
    "check:biome": "biome check .",
    "fix:biome": "biome check --write .",
    "prepare": "husky",
    "deps:outdated": "pnpm -r outdated",
    "db:migrate:local": "wrangler d1 execute portfolio-sql-staging --local --file",
    "db:migrate:staging": "wrangler d1 execute portfolio-sql-staging --remote --file",
    "db:migrate:prod": "wrangler d1 execute portfolio-sql-prod --remote --file",
    "db:query:local": "wrangler d1 execute portfolio-sql-staging --local --command",
    "db:query:staging": "wrangler d1 execute portfolio-sql-staging --remote --command",
    "db:query:prod": "wrangler d1 execute portfolio-sql-prod --remote --command",
    "db:shell:staging": "wrangler d1 execute portfolio-sql-staging --remote",
    "db:shell:prod": "wrangler d1 execute portfolio-sql-prod --remote"
  },
  "keywords": [],
  "author": "i@xuli.dev",
  "license": "ISC",
  "packageManager": "pnpm@10.18.0",
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "eslint": "^9.39.1",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "turbo": "^2.6.1"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{json,jsonc}": [
      "prettier --write"
    ]
  }
}
