{
  "name": "portfolio",
  "version": "0.0.1",
  "type": "module",
  "description": "My portfolio",
  "main": "index.js",
  "engines": {
    "node": ">=22 <23"
  },
  "scripts": {
    "dev": "turbo run dev --parallel --filter=@portfolio/shared --filter=@portfolio/service --filter=@portfolio/ui2",
    "dev:service": "turbo run dev --parallel --filter=@portfolio/shared --filter=@portfolio/service",
    "dev:ui2": "turbo run dev --parallel --filter=@portfolio/shared --filter=@portfolio/ui2",
    "build:service": "turbo run build --filter=@portfolio/service",
    "build:ui2": "turbo run build --filter=@portfolio/ui2",
    "build:r2": "turbo run build --filter=@portfolio/r2-sync",
    "build": "turbo run build",
    "test:service": "turbo run test --filter=@portfolio/service",
    "test:ui2": "turbo run test --filter=@portfolio/ui2",
    "test:r2": "turbo run test --filter=@portfolio/r2-sync",
    "test": "turbo run test",
    "type:check:ci": "turbo run type:check:ci",
    "cf-typegen": "turbo run cf-typegen",
    "sync:r2": "turbo run sync --filter=@portfolio/r2-sync",
    "lint": "turbo run lint",
    "lint:check": "turbo run lint:check",
    "lint:fix": "turbo run lint:fix",
    "format:biome": "biome format .",
    "lint:biome": "biome lint .",
    "check:biome": "biome check .",
    "fix:biome": "biome check --write .",
    "prepare": "husky",
    "deps:outdated": "pnpm -r outdated"
  },
  "keywords": [],
  "author": "i@xuli.dev",
  "license": "ISC",
  "packageManager": "pnpm@10.18.0",
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "eslint": "^9.38.0",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "turbo": "^2.6.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{json,jsonc}": [
      "prettier --write"
    ],
    "apps/**/wrangler.{json,jsonc}": [
      "pnpm cf-typegen"
    ]
  }
}
