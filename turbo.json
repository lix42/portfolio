{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["pnpm-lock.yaml", "tsconfig.json"],
  "globalEnv": [
    "CI",
    "NODE_ENV",
    "SUPABASE_URL",
    "SUPABASE_SERVICE_ROLE_KEY",
    "SUPABASE_ANON_KEY",
    "OPENAI_API_KEY",
    "CLOUDFLARE_ACCOUNT_ID",
    "CLOUDFLARE_API_TOKEN",
    "CLOUDFLARE_API_KEY",
    "CLOUDFLARE_EMAIL"
  ],
  "tasks": {
    "dev": {
      "dependsOn": ["^dev"],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        "build/**",
        ".next/**",
        ".output/**",
        ".react-router/**",
        ".waku/**",
        ".wrangler/**",
        ".svelte-kit/**"
      ]
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "outputs": []
    },
    "lint:check": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "format:check": {
      "outputs": []
    },
    "format:fix": {
      "outputs": []
    },
    "biome": {
      "outputs": []
    },
    "biome:check": {
      "outputs": []
    },
    "biome:fix": {
      "outputs": []
    },
    "cf-typegen": {
      "outputs": ["apps/**/.wrangler/**", ".wrangler/**"]
    },
    "type:check": {
      "dependsOn": ["^type:check"],
      "outputs": []
    },
    "type:check:ci": {
      "dependsOn": ["^type:check:ci"],
      "outputs": []
    },
    "type:build": {
      "dependsOn": ["^type:build"],
      "outputs": ["dist/**", "types/**"]
    },
    "deploy": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "sync": {
      "dependsOn": ["build"],
      "outputs": []
    }
  }
}
