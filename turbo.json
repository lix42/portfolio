{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["pnpm-lock.yaml", "tsconfig.json"],
  "globalEnv": [
    "CI",
    "NODE_ENV",
    "SUPABASE_URL",
    "SUPABASE_SERVICE_ROLE_KEY",
    "SUPABASE_ANON_KEY",
    "OPENAI_API_KEY",
    "CLOUDFLARE_ACCOUNT_ID",
    "CLOUDFLARE_API_TOKEN",
    "CLOUDFLARE_API_KEY",
    "CLOUDFLARE_EMAIL",
    "CLOUDFLARE_ENV"
  ],
  "tasks": {
    "dev": {
      "with": ["dev"],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["lint", "typecheck", "^build"],
      "outputs": [
        "dist/**",
        "build/**",
        ".next/**",
        ".output/**",
        ".react-router/**",
        ".waku/**",
        ".wrangler/**",
        ".svelte-kit/**"
      ]
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "outputs": []
    },
    "cf-typegen": {
      "outputs": ["apps/**/.wrangler/**", ".wrangler/**"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": []
    },
    "deploy": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "deploy:prod": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "sync": {
      "dependsOn": ["build"],
      "outputs": []
    }
  }
}
