{
  "name": "@portfolio/service",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "$npm_execpath run lint:check && tsc --noEmit && vite build",
    "preview": "$npm_execpath run build && vite preview",
    "test": "vitest",
    "lint": "$npm_execpath run lint:check",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "biome": "$npm_execpath run biome:check",
    "biome:check": "biome check .",
    "biome:fix": "biome check --write .",
    "deploy": "$npm_execpath run build && wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.0",
    "@supabase/supabase-js": "^2.50.4",
    "hono": "^4.8.4",
    "openai": "^5.8.3",
    "zod": "^3.25.71"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@cloudflare/vite-plugin": "^1.2.3",
    "@cloudflare/vitest-pool-workers": "^0.8.48",
    "@cloudflare/workers-types": "^4.20250709.0",
    "@portfolio/biome-config": "workspace:*",
    "@portfolio/eslint-config": "workspace:*",
    "eslint": "^9.16.0",
    "prettier": "^3.4.2",
    "typescript": "^5.8.0",
    "vite": "^6.3.5",
    "vite-ssr-components": "^0.3.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "wrangler": "^4.17.0"
  }
}
