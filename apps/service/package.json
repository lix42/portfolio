{
  "name": "@portfolio/service",
  "version": "0.0.1",
  "type": "module",
  "files": [
    "dist/"
  ],
  "types": "./dist/fetchResponseTypes.d.ts",
  "exports": {
    ".": {
      "types": "./dist/fetchResponseTypes.d.ts",
      "default": "./dist/fetchResponseTypes.d.ts"
    },
    "./serviceBinding": {
      "types": "./dist/chatServiceBinding.d.ts",
      "default": "./dist/chatServiceBinding.d.ts"
    }
  },
  "scripts": {
    "dev": "wrangler dev -e staging --port 5000",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "build": "$npm_execpath run type:build",
    "deploy": "$npm_execpath install && $npm_execpath run build && $npm_execpath run deploy:wrangler",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "type:check": "tsc --noEmit",
    "type:check:ci": "$npm_execpath run type:check",
    "type:build": "tsc --project tsconfig.type.json",
    "deploy:wrangler": "wrangler deploy --minify"
  },
  "dependencies": {
    "@hono/standard-validator": "^0.2.1",
    "@portfolio/shared": "workspace:*",
    "@scalar/hono-api-reference": "^0.9.30",
    "@standard-community/standard-openapi": "^0.2.9",
    "hono": "^4.11.3",
    "hono-openapi": "^1.1.2",
    "openai": "^6.15.0",
    "openapi-types": "^12.1.3",
    "zod": "^4.3.4",
    "zod-openapi": "^5.4.3"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "@vitest/coverage-istanbul": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "wrangler": "^4.59.1"
  }
}
