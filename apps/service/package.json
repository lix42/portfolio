{
  "name": "@portfolio/service",
  "version": "0.0.1",
  "type": "module",
  "files": [
    "dist/"
  ],
  "types": "./dist/fetchResponseTypes.d.ts",
  "exports": {
    ".": {
      "types": "./dist/fetchResponseTypes.d.ts",
      "default": "./dist/fetchResponseTypes.d.ts"
    },
    "./serviceBinding": {
      "types": "./dist/chatServiceBinding.d.ts",
      "default": "./dist/chatServiceBinding.d.ts"
    }
  },
  "scripts": {
    "dev": "wrangler dev --port 5173",
    "lint": "$npm_execpath run eslint:check",
    "lint:fix": "$npm_execpath run eslint:fix",
    "test": "vitest",
    "build": "$npm_execpath run eslint:check && $npm_execpath run type:build",
    "deploy": "$npm_execpath install && $npm_execpath run build && $npm_execpath run deploy:wrangler",
    "eslint": "$npm_execpath run eslint:check",
    "eslint:check": "eslint .",
    "eslint:fix": "eslint --fix .",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "type:check": "tsc --noEmit",
    "type:check:ci": "$npm_execpath run type:check",
    "type:build": "tsc --project tsconfig.type.json",
    "deploy:wrangler": "wrangler deploy --minify"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.3",
    "@portfolio/shared": "workspace:*",
    "@supabase/supabase-js": "^2.58.0",
    "hono": "^4.9.9",
    "openai": "^6.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.71",
    "@cloudflare/workers-types": "^4.20251004.0",
    "@portfolio/eslint-config": "workspace:*",
    "@types/node": "^24.7.2",
    "eslint": "^9.37.0",
    "prettier": "^3.4.2",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.42.0"
  }
}
