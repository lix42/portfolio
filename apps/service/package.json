{
  "name": "@portfolio/service",
  "version": "0.0.1",
  "type": "module",
  "files": [
    "dist/"
  ],
  "types": "./dist/fetchResponseTypes.d.ts",
  "exports": {
    ".": {
      "types": "./dist/fetchResponseTypes.d.ts",
      "default": "./dist/fetchResponseTypes.d.ts"
    },
    "./serviceBinding": {
      "types": "./dist/chatServiceBinding.d.ts",
      "default": "./dist/chatServiceBinding.d.ts"
    }
  },
  "scripts": {
    "dev": "wrangler dev -e staging --port 5000",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "build": "tsc --project tsconfig.type.json",
    "deploy": "wrangler deploy --minify --env staging",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "typecheck": "tsc --noEmit",
    "deploy:prod": "wrangler deploy --minify --env production"
  },
  "dependencies": {
    "@hono/standard-validator": "^0.2.2",
    "@portfolio/shared": "workspace:*",
    "@scalar/hono-api-reference": "^0.9.38",
    "@standard-community/standard-openapi": "^0.2.9",
    "hono": "^4.11.7",
    "hono-openapi": "^1.2.0",
    "openai": "^6.17.0",
    "openapi-types": "^12.1.3",
    "zod": "^4.3.6",
    "zod-openapi": "^5.4.6"
  },
  "devDependencies": {
    "@types/node": "^22.19.7",
    "@vitest/coverage-istanbul": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "wrangler": "^4.61.1"
  }
}
