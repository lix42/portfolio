{
  "name": "@portfolio/service",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "$npm_execpath run biome:check && tsc --noEmit",
    "test": "vitest",
    "lint": "$npm_execpath run lint:check",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "biome": "$npm_execpath run biome:check",
    "biome:check": "biome check .",
    "biome:fix": "biome check --write .",
    "deploy": "$npm_execpath run build && wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.3",
    "@supabase/supabase-js": "^2.58.0",
    "hono": "^4.9.9",
    "openai": "^6.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@cloudflare/vitest-pool-workers": "^0.8.71",
    "@cloudflare/workers-types": "^4.20251004.0",
    "@portfolio/eslint-config": "workspace:*",
    "eslint": "^9.37.0",
    "prettier": "^3.4.2",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.42.0"
  }
}
