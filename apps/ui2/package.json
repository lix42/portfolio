{
  "name": "@portfolio/ui2",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "cf-typegen": "wrangler types",
    "dev": "react-router dev",
    "lint": "$npm_execpath run biome:check && $npm_execpath run stylelint:check",
    "lint:fix": "$npm_execpath run biome:fix && $npm_execpath run stylelint:fix",
    "build": "react-router build",
    "deploy": "pnpm run build && wrangler deploy",
    "postinstall": "npm run cf-typegen",
    "preview": "pnpm run build && vite preview",
    "type:check": "npm run cf-typegen && react-router typegen && tsc -b",
    "biome": "$npm_execpath run biome:check",
    "biome:check": "biome check .",
    "biome:fix": "biome check --write .",
    "stylelint:check": "stylelint \"**/*.css\"",
    "stylelint:fix": "stylelint \"**/*.css\" --fix",
    "prettier:check": "prettier --check \"**/*.css\"",
    "prettier:fix": "prettier --write \"**/*.css\""
  },
  "dependencies": {
    "isbot": "^5.1.31",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router": "^7.9.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.1",
    "@cloudflare/vite-plugin": "^1.13.5",
    "@portfolio/service": "workspace:*",
    "@react-router/dev": "^7.9.2",
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "^22",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "prettier": "^3.6.2",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-config-tailwindcss": "^1.0.0",
    "stylelint-prettier": "^5.0.3",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-tsconfig-paths": "^5.1.4",
    "wrangler": "^4.45.0"
  }
}
