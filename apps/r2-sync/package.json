{
  "name": "@portfolio/r2-sync",
  "version": "1.0.0",
  "description": "CLI tool to sync documents to Cloudflare R2",
  "type": "module",
  "bin": {
    "r2-sync": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "sync": "node ./dist/cli.js",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "$npm_execpath run eslint:check",
    "lint:fix": "$npm_execpath run eslint:fix",
    "type:check": "tsc --noEmit",
    "type:check:ci": "$npm_execpath run type:check",
    "eslint": "$npm_execpath run eslint:check",
    "eslint:check": "eslint .",
    "eslint:fix": "eslint --fix ."
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.504.0",
    "@aws-sdk/lib-storage": "^3.504.0",
    "@portfolio/shared": "workspace:*",
    "@smithy/node-http-handler": "^4.4.4",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "hpagent": "^1.2.0"
  },
  "devDependencies": {
    "@portfolio/eslint-config": "workspace:*",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^4.0.8",
    "dotenv": "^17.2.3",
    "tsup": "^8.5.1",
    "typescript": "^5.3.3",
    "vitest": "^4.0.8"
  }
}
