{
  "name": "@portfolio/r2-reconciliation",
  "version": "1.0.0",
  "description": "Self-healing reconciliation worker for R2 documents",
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify --env staging",
    "deploy:prod": "wrangler deploy --minify --env production",
    "build": "node -e \"\"",
    "cf-typegen": "wrangler types",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "tail": "wrangler tail",
    "tail:staging": "wrangler tail --env staging",
    "tail:prod": "wrangler tail --env production"
  },
  "devDependencies": {
    "@types/node": "^22.19.7",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "wrangler": "^4.61.1"
  }
}
